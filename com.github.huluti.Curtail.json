                {
                    "type": "archive",
                    "url": "https://storage.googleapis.com/downloads.webmproject.org/releases/webp/libwebp-1.3.0.tar.gz",
                    "sha256": "64ac4614db292ae8c5aa26de0295bf1623dbb3985054cb656c55e67431def17c"
                }
            ]
        },
        {
            "name": "curtail",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Huluti/Curtail"
                }
            ]
        }
    ]
}
